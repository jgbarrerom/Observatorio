<div>
<?php
    $form = $this->cargaForm;
    $form->prepare();
    
//// Assuming the "contact/process" route exists...
$form->setAttribute('action', $this->url.'/application/trabajo/formulario');
//
//// Set the method attribute for the form
$form->setAttribute('method', 'post');
$form->setAttribute('class','form-inline');
//
//// Get the form label plugin
$formLabel = $this->plugin('formLabel');

// Render the opening tag
echo $this->form()->openTag($form);
?>
    <div class="input-prepend">
<?php
    $name = $form->get('nombre');

    echo $formLabel->openTag() . $name->getOption('label') . $formLabel->closeTag();
    echo $this->formInput($name);
    echo $this->formElementErrors($name);
    
    $pass = $form->get('password');
    echo '<br>' . $formLabel->openTag() . $pass->getOption('label') . $formLabel->closeTag();
    echo $this->formInput($pass);
    echo $this->formElementErrors($pass);
    
    $btnsubmit = $form->get('enviar');
    echo '<br>' . $this->formInput($btnsubmit);
    
    echo $this->form()->closeTag()
?>  
</div>