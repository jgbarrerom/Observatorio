<script src="/js/jquery-ui.js" type="text/javascript"></script>
<script src="/js/DataTableVias.js" type="text/javascript"></script>
<script src="/js/mapApi.js" type="text/javascript"></script>
<script src="/js/mapaSencillo.js" type="text/javascript"></script>
<link href="/css/jquery-ui.css" rel="stylesheet" type="text/css"/>
<div class="row-fluid">
    <div class="span7">
        <h2>Lista de proyectos viales</h2>
    </div>
    <div class="span4">
        <div class="text-middle">
            <input type="text" id="txtSerch" class="input-medium search-query">
            <button id="search" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</div>
<div class="row-fluid">
    <table class="table table-hover" id="listVias" cellpadding="10" style="width: 100%">
        <thead style="background-color: #2D89EF;color: #FFFFFF">
            <tr>
                <th>Civ</th>
                <th>Tramo</th>
                <th>Direccion Inicio</th>
                <th>Direccion Final</th>
                <th colspan="2"></th>
            </tr>
        </thead>
    </table>
</div>
<div id="dialog-edit" title="Edicion de proyecto vial">
    <form enctype="multipart/form-data" id="form-viaEdit" class="form-horizontal" name="FormGuardarVia" method="post" action="/vias/crear" novalidate="novalidate">
        <div class="input-prepend span6">
            <div class="control-group"><label class="control-label">Tramo :</label>
                <div class="controls"><input type="text" value="" required="required" id="tramo" name="tramo">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Direccion Inicio :</label>
                <div class="controls">
                    <input type="text" value="" class="form-control espacio" required="required" id="dirInicio" name="dirInicio">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Direccion Final :</label>
                <div class="controls">
                    <input type="text" value="" class="form-control" required="required" id="dirFinal" name="dirFinal">
                </div>
            </div><div class="control-group">
                <label class="control-label">CIV :</label>
                <div class="controls">
                    <input type="text" value="" class="form-control" style="resize: none;" required="required" id="civ" name="civ">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Presupuesto :</label>
                <div class="controls">
                    <input type="text" value="" class="form-control" required="required" id="presupuesto" name="presupuesto">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Largo :</label>
                <div class="controls">
                    <input type="text" value="" class="form-control" required="required" id="largo" name="largo">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Tipo de Obra :</label>
                <div class="controls">
                    <select class="form-control" required="required" id="tipoObra" name="tipoObra">
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Estado:</label>
                <div class="controls">
                    <select class="form-control" required="required" id="estado" name="estado">
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Barrio:</label>
                <div class="controls">
                    <select class="form-control" required="required" id="barrio" name="estado">
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Fotografias :</label>
                <div class="controls">
                    <input type="file" multiple="multiple" id="fotos" name="fotos[]">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <input id="coordenadas" type="hidden" value="" required="required" name="coordenadas">
            </div>
        </div>
        <div id="googleMap" style="width: 300px;height: 300px;">

        </div>
    </form>
</div>