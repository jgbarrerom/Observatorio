<script type="text/javascript">
    jQuery().ready(function(){
        jQuery("#formLogin").validate({
            errorClass:'text-error',
            rules:{
                correo:{required:true,email:true},
                password:{required:true,minlength:5}
            },
            messages:{
                correo:{required:'El correo es obligatorio',email:'El correo no es valido'},
                password:{required:'La contraseña es obligatoria',minlength:'El tamaño de la clave es demasiado corto'}
            }
        });
    });
</script>
<?php
    $form = $this->formLogin;
    $form->prepare();
    
    //// Assuming the "contact/process" route exists...
$form->setAttribute('action', $this->url.'/login/ingreso');
//
//// Set the method attribute for the form
$form->setAttribute('method', 'post');
$form->setAttribute('class','form-signin');
//
//// Get the form label plugin
$formLabel = $this->plugin('formLabel');

// Render the opening tag
echo $this->form()->openTag($form);
?>
<?php
    $name = $form->get('correo');
    echo $formLabel->openTag() . $name->getOption('label') . $formLabel->closeTag();
    echo $this->formInput($name);
    
    $pass = $form->get('password');
    echo $formLabel->openTag() . $pass->getOption('label') . $formLabel->closeTag();
    echo $this->formInput($pass);    
